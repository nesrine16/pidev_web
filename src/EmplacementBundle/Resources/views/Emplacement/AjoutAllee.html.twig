{% extends "@Admin/Default/back.html.twig" %}

{% block body %}

    <div class="left-ads-display col-lg-9">
        <div class="row">


            {{ form_start(form) }}



            <table align="center">
                <form action="#" method="post">
                    <div class=" agile-wls-contact-mid">

                        <div class="form-group contact-forms">


                            <label class="control-label">Ligne de l'allee </label>
                            {{ form_widget(form.ligne,{'attr':{'class':'form-control','placeholder':"Ligne"}}) }}
                            {{ form_errors(form.ligne) }}
                        </div>

                        <div class="form-group contact-forms">
                            <label class="control-label">Nombre de Travées par allées </label>
                            {{ form_widget(form.nbTrav,{'attr':{'class':'form-control','placeholder':"Nombre de travées"}}) }}
                            {{ form_errors(form.nbTrav) }}
                        </div>

                        <div class="form-group contact-forms">
                            <label class="control-label">Nombre de niveaux par travées </label>
                            {{ form_widget(form.niv,{'attr':{'class':'form-control','placeholder':"Nombre de niveaux par travées"}}) }}
                            {{ form_errors(form.niv) }}
                        </div>


                        <div class="row">
                            <div class="col-md-3 col-lg-3 col-sm-12">

                                <button type="submit" class="btn btn-default">Ajouter</button>
                            </div>
                        </div>
                    </div>
                </form>
            </table>


            {{ form_end(form) }}


            <table class="table table_condensed">

                <thead>

                <th>Ligne de l'allée</th>
                <th> Nombre de Travées</th>
                <th> Nombre de niveaux par travées</th>
                </thead>


                {% for e in aa %}
                    <tr>
                        <td> {{ e.ligne }}</td>
                        <td> {{ e.nbTrav }}</td>
                        <td> {{ e.niv }}</td>

                        <td class="col-md-2"><a href="{{ path('del_allee',{'id':e.id}) }}"
                                                class="btn btn-danger">Supprimer
                            </a>
                        </td>

                        <td class="col-md-2"><a href="{{ path('updateAllee',{'id':e.id}) }}"
                                                class="btn btn-danger">Modifier
                            </a>
                        </td>

                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

{% endblock %}