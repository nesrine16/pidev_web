{% extends "@track/Default/back.html.twig" %}

{% block body %}

    <div class="left-ads-display col-lg-5">
        <div class="row">


            {{ form_start(form) }}



            <table align="center">
                <form action="#" method="post">
                    <div class=" agile-wls-contact-mid">

                        <div class="form-group contact-forms">


                            <label class="control-label">Référence de l'article </label>
                            {{ form_widget(form.refArticle,{'attr':{'class':'form-control','placeholder':"Saisir la reference de l'article"}}) }}
                            {{ form_errors(form.refArticle) }}
                        </div>

                        <div class="form-group contact-forms">
                            <label class="control-label">Désignation de l'article </label>
                            {{ form_widget(form.designation,{'attr':{'class':'form-control','placeholder':"Saisir la désignation"}}) }}
                            {{ form_errors(form.designation) }}
                        </div>

                        <div class="form-group contact-forms">
                            <label class="control-label">Code à barres </label>
                            {{ form_widget(form.code,{'attr':{'class':'form-control','placeholder':"Saisir le codes à barres"}}) }}
                            {{ form_errors(form.code) }}
                        </div>

                        <div class="form-group contact-forms">
                            <label class="control-label">Seuil minimum </label>
                            {{ form_widget(form.seuilMin,{'attr':{'class':'form-control','placeholder':"Saisir le seuil mininimum"}}) }}
                            {{ form_errors(form.seuilMin) }}
                        </div>

                        <div class="form-group contact-forms">
                            <label class="control-label">Seuil maximum </label>
                            {{ form_widget(form.seuilMax,{'attr':{'class':'form-control','placeholder':"Saisir le seuil maximum"}}) }}
                            {{ form_errors(form.seuilMax) }}
                        </div>

                        <div class="form-group contact-forms">
                            <label class="control-label">Prix de vente </label>
                            {{ form_widget(form.prix_vente,{'attr':{'class':'form-control','placeholder':"Saisir le prix de vente"}}) }}
                            {{ form_errors(form.prix_vente) }}
                        </div>


                        <div class="form-group contact-forms">
                            <label class="control-label">Prix d'achat </label>
                            {{ form_widget(form.prix_achat,{'attr':{'class':'form-control','placeholder':"Saisir le prix d'achat"}}) }}
                            {{ form_errors(form.prix_achat) }}
                        </div>

                        <div class="form-group contact-forms">
                            <label class="control-label">Unité</label>
                            {{ form_widget(form.unite,{'attr':{'class':'form-control','placeholder':"Saisir l'unité de l'article"}}) }}
                            {{ form_errors(form.unite) }}
                        </div>


                        <div class="form-group contact-forms">
                            <label class="control-label">La famille </label>
                            {{ form_widget(form.famille,{'attr':{'class':'form-control','placeholder':"Saisir la famille"}}) }}
                            {{ form_errors(form.famille) }}
                        </div>

                        <div class="form-group contact-forms">
                            <label class="control-label">Le fournisseur </label>
                            {{ form_widget(form.fournisseur,{'attr':{'class':'form-control','placeholder':"Saisir le fournisseur"}}) }}
                            {{ form_errors(form.fournisseur) }}
                        </div>

                        <div class="row">
                            <div class="col-md-3 col-lg-3 col-sm-12">

                                <button type="submit" class="btn btn-default">Ajouter</button>
                            </div>
                        </div>
                    </div>
                </form>
            </table>


            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}