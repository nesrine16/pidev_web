{% extends "@User/Default/index.html.twig" %}
{% block slide %}
    <div class="inner_page-banner one-img">
    </div>

    <div class="using-border py-3">
        <div class="inner_breadcrumb  ml-4">
            <ul class="short_ls">
                <li>Ajouter une livraison</li>
            </ul>
        </div>
    </div>

{% endblock %}
{% block body %}
    <link rel="stylesheet" href="#" type="text/css">
    {{ form_start(form) }}
    <div class="container py-lg-5 py-md-4 py-sm-4 py-3">
        <h3 class="title text-center mb-lg-5 mb-md-4 mb-sm-4 mb-3">Cre√©r une livraison !</h3>
        <div class="contact-list-grid">
            <form action="#" method="post">
                <div class=" agile-wls-contact-mid">


                    <div class="form-group contact-forms">
                        {{ form_label(form.livreur) }}
                        {{ form_widget(form.livreur,{'attr':{'class':'form-control','placeholder':"Saisir l'adresse" }}) }}
                        {{ form_errors(form.livreur) }}
                    </div>
                    <div class="form-group contact-forms">
                        {{ form_label(form.commande) }}
                        {{ form_widget(form.commande,{'attr':{'class':'form-control','placeholder':"Saisir l'adresse" }}) }}
                        {{ form_errors(form.commande) }}
                    </div>

                    <button type="submit" class="btn btn-block sent-butnn" name="_submit" id="_submit">Ajouter</button>
                </div>
            </form>
            {{ form_end(form) }}
        </div>

    </div>

{% endblock %}
{% block js %}
    <script src="{{ asset('notif/lobibox.js') }}"></script>
    <script src="{{ asset('datePicker.js') }}"></script>
{% endblock %}

{% block login %}
    <div>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
            <a href="{{ path('fos_user_security_logout') }}">
                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
            </a>

        {% endif %}
    </div>

    {% if app.request.hasPreviousSession %}
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="flash-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}

    <div>
        {% block fos_user_content %}
        {% endblock fos_user_content %}
    </div>
{% endblock %}


