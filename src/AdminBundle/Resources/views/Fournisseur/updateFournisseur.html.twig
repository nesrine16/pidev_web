{% extends "@Admin/Default/back.html.twig" %}

{% block body %}

    <div class="left-ads-display col-lg-9">
        <div class="row">


            {{ form_start(form) }}



            <table align="center">
                <form action="#" method="post">

                    <div class=" agile-wls-contact-mid">

                        <h3>Modifier les informations du fournisseur de {{ nomSociete }}</h3>
                        <div class="form-group contact-forms">
                            <label class="control-label">Nom de la societe du fournisseur </label>
                            {{ form_widget(form.nomSociete,{'attr':{'class':'form-control','placeholder':"Saisir le nom de la societe"}}) }}
                            {{ form_errors(form.nomSociete) }}
                        </div>

                        <div class="form-group contact-forms">
                            <label class="control-label">Cin du fournisseur </label>
                            {{ form_widget(form.cin,{'attr':{'class':'form-control','placeholder':"Saisir la cin du fournisseur"}}) }}
                            {{ form_errors(form.cin) }}
                        </div>

                        <div class="form-group contact-forms">
                            <label class="control-label">Email du fournisseur </label>
                            {{ form_widget(form.email,{'attr':{'class':'form-control','placeholder':"Saisir email du fournisseur"}}) }}
                            {{ form_errors(form.email) }}
                        </div>

                        <div class="form-group contact-forms">
                            <label class="control-label">Adresse du fournisseur </label>
                            {{ form_widget(form.adresse,{'attr':{'class':'form-control','placeholder':"Saisir adresse du fournisseur"}}) }}
                            {{ form_errors(form.adresse) }}
                        </div>

                        <div class="form-group contact-forms">
                            <label class="control-label">Téléphone du fournisseur </label>
                            {{ form_widget(form.telephone,{'attr':{'class':'form-control','placeholder':"Saisir le téléphone du fournisseur"}}) }}
                            {{ form_errors(form.telephone) }}
                        </div>

                        <div class="form-group contact-forms">
                            <label class="control-label">Fax du fournisseur </label>
                            {{ form_widget(form.fax,{'attr':{'class':'form-control','placeholder':"Saisir le fax du fournisseur"}}) }}
                            {{ form_errors(form.fax) }}
                        </div>


                        <div class="row">
                            <div class="col-md-3 col-lg-3 col-sm-12">

                                <button type="submit" class="btn btn-default">Modifier</button>
                            </div>
                        </div>
                    </div>
                </form>
            </table>


            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}